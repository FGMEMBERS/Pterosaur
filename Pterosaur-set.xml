<?xml version="1.0"?>

<PropertyList>
 <sim>

  <description>Pterosaur</description>
  <long-description>
   Pterosaurs are flying reptiles of the extinct clade or order Pterosauria. They existed from the late Triassic to the end of the Cretaceous (228 to 66 million years ago). Pterosaurs are the earliest vertebrates known to have evolved powered flight. Their wings were formed by a membrane of skin, muscle, and other tissues stretching from the ankles to a dramatically lengthened fourth finger.
  </long-description>
  <author>Erik Hofman</author>
  <status>alpha</status>
  <rating>
   <FDM type="int">2</FDM>
   <systems type="int">2</systems>
   <model type="int">2</model>
   <cockpit type="int">0</cockpit>
  </rating>

  <flight-model>jsb</flight-model>
  <aero>Pterosaur</aero>
  <tags>
   <tag>variable-geometry</tag>
  </tags>

  <model>
   <path>Aircraft/Pterosaur/Models/Pterosaur.xml</path>
  </model>

  <startup>
  </startup>
  <previews>
    <preview>
      <type>exterior</type>
      <path>Preview/Pterosaur01.jpg</path>
      <splash type="bool">true</splash>
    </preview>
    <preview>
      <type>exterior</type>
      <path>Preview/Pterosaur02.jpg</path>
      <splash type="bool">true</splash>
    </preview>
  </previews>

  <systems>
   <property-rule n="100"> 
    <name>animation</name> 	
    <path>Systems/Animation.xml</path>  
   </property-rule>
  </systems>
 </sim>

 <input>
  <keyboard>
   <key n="360">
    <name>PageUp</name>
    <desc>Increase throttle</desc>
    <repeatable type="bool">true</repeatable>
    <binding>
     <command>nasal</command>
     <script>
       controls.incThrottle(1.0, -1.0)
     </script>
    </binding>
   </key>

   <key n="361">
    <name>PageDown</name>
    <desc>Decrease throttle</desc>
    <repeatable type="bool">true</repeatable>
    <binding>
    <command>nasal</command>
     <script>
       controls.incThrottle(-1.0, 1.0)
     </script>
    </binding>
   </key>

   <key n="102">
    <name>f</name>
    <desc>Fire Breath</desc>
    <binding>
     <command>property-assign</command>
     <property>/controls/effects/fire</property>
     <value type="int">1</value>
    </binding>
    <mod-up>
     <binding>
      <command>property-assign</command>
      <property>/controls/effects/fire</property>
      <value type="int">0</value>
     </binding>
    </mod-up>
   </key>

   <key n="119">
    <name>w</name>
    <desc>Wing Fold</desc>
    <binding>
     <command>property-assign</command>
     <property>/controls/flight/wing-fold</property>
     <value type="int">1</value>
    </binding>
    <mod-up>
     <binding>
      <command>property-assign</command>
      <property>/controls/flight/wing-fold</property>
      <value type="int">0</value>
     </binding>
    </mod-up>
   </key>

  </keyboard>
 </input>

 <controls>
  <gear>
   <brake-parking type="bool">true</brake-parking>
   <tail-rotate type="int">1</tail-rotate>
  </gear>
  <flight>
   <property type="int">0</property>
  </flight>
 </controls>



</PropertyList>
