<?xml version="1.1"?>

<PropertyList>
 <sim>

  <description>Pterosaur</description>
  <author>Erik Hofman</author>
  <status>alpha</status>
  <rating>
   <FDM type="int">2</FDM>
   <systems type="int">2</systems>
   <model type="int">2</model>
   <cockpit type="int">0</cockpit>
  </rating>

  <flight-model>jsb</flight-model>
  <aero>Pterosaur</aero>

  <model>
   <path>Aircraft/Pterosaur/Models/Dragon.xml</path>
  </model>

  <startup>
    <splash-texture>Aircraft/Pterosaur/dragon_splash.png</splash-texture>
  </startup>

  <systems>
   <property-rule n="100"> 
    <name>animation</name> 	
    <path>Systems/Animation.xml</path>  
   </property-rule>
  </systems>
 </sim>

 <input>
  <keyboard>
   <key n="360">
    <name>PageUp</name>
    <desc>Increase throttle</desc>
    <repeatable type="bool">true</repeatable>
    <binding>
     <command>nasal</command>
     <script>
       controls.incThrottle(1.0, -1.0)
     </script>
    </binding>
   </key>

   <key n="361">
    <name>PageDown</name>
    <desc>Decrease throttle</desc>
    <repeatable type="bool">true</repeatable>
    <binding>
    <command>nasal</command>
     <script>
       controls.incThrottle(-1.0, 1.0)
     </script>
    </binding>
   </key>

   <key n="102">
    <name>f</name>
    <desc>Fire Breath</desc>
    <binding>
     <command>property-assign</command>
     <property>/controls/effects/fire</property>
     <value type="int">1</value>
    </binding>
    <mod-up>
     <binding>
      <command>property-assign</command>
      <property>/controls/effects/fire</property>
      <value type="int">0</value>
     </binding>
    </mod-up>
   </key>

   <key n="119">
    <name>w</name>
    <desc>Wing Fold</desc>
    <binding>
     <command>property-assign</command>
     <property>/controls/flight/wing-fold</property>
     <value type="int">1</value>
    </binding>
    <mod-up>
     <binding>
      <command>property-assign</command>
      <property>/controls/flight/wing-fold</property>
      <value type="int">0</value>
     </binding>
    </mod-up>
   </key>

  </keyboard>
 </input>

 <controls>
  <gear>
   <brake-parking type="bool">true</brake-parking>
   <tail-rotate type="int">1</tail-rotate>
  </gear>
  <flight>
   <property type="int">0</property>
  </flight>
 </controls>



</PropertyList>
