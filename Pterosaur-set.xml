<?xml version="1.1"?>

<PropertyList>
 <sim>

  <description>Pterosaur</description>
  <author>Erik Hofman</author>
  <status>alpha</status>
  <rating>
    <FDM type="int">1</FDM>
    <systems type="int">0</systems>
    <model type="int">0</model>
    <cockpit type="int">0</cockpit>
  </rating>


  <flight-model>jsb</flight-model>
  <aero>Pterosaur</aero>
 </sim>

 <input>
  <keyboard>
   <key n="360">
    <name>PageUp</name>
    <desc>Increase throttle</desc>
    <repeatable type="bool">true</repeatable>
    <binding>
     <command>nasal</command>
     <script>
       controls.incThrottle(1.0, -1.0)
     </script>
    </binding>
   </key>

   <key n="361">
    <name>PageDown</name>
    <desc>Decrease throttle</desc>
    <repeatable type="bool">true</repeatable>
    <binding>
    <command>nasal</command>
     <script>
       controls.incThrottle(-1.0, 1.0)
     </script>
    </binding>
   </key>
  </keyboard>
 </input>



 <controls>
  <gear>
   <brake-parking type="bool">true</brake-parking>
  </gear>
 </controls>


</PropertyList>
