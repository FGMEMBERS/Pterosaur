<PropertyList>

 <path>scales.ac</path>
 <offsets>
   <x-m> 0 </x-m>
   <y-m> 0 </y-m>
   <z-m> -2.1 </z-m>
   <heading-deg>-90</heading-deg>
 </offsets>

 <model>
   <name>Fire</name>
   <path>Aircraft/Pterosaur/Models/Effects/fire.xml</path>
   <offsets>
     <x-m>0.0</x-m>
     <y-m>-2.75</y-m>
     <z-m>2.0</z-m>
     <pitch-deg>90</pitch-deg>
     <heading-deg>-90</heading-deg>
     <roll-deg>0</roll-deg>
   </offsets>  
 </model>

 <effect>
   <inherits-from>Aircraft/Pterosaur/Models/Effects/tailsweep</inherits-from>
   <object-name>Tail</object-name>
 </effect>

 <effect>
   <inherits-from>Aircraft/Pterosaur/Models/Effects/wingflex</inherits-from>
   <object-name>WingL</object-name>
   <object-name>WingR</object-name>
 </effect>

<!--
 <effect>
   <inherits-from>Aircraft/Pterosaur/Models/Effects/legretract</inherits-from>
   <object-name>FootL</object-name>
   <object-name>FootR</object-name>
 </effect>
-->

 <effect>
   <inherits-from>Aircraft/Pterosaur/Models/Effects/bumpspec-body</inherits-from>
   <object-name>Body</object-name>
 </effect>

 <animation>
  <type>rotate</type>
  <object-name>Head</object-name>
  <object-name>Fire</object-name>
  <property>/fdm/jsbsim/fcs/rudder-pos-rad</property>
  <factor>57.3</factor>
  <center>
   <x-m> 0.0</x-m>
   <y-m>-2.35</y-m>
   <z-m> 2.1</z-m>
  </center>
  <axis>
   <x> 0.0</x>
   <y> 0.0</y>
   <z> 1.0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>Head</object-name>
  <object-name>Fire</object-name>
  <property>/fdm/jsbsim/fcs/tail-alpha-trailing-scaled-rad</property>
  <factor>57.3</factor>
  <center>
   <x-m> 0.0</x-m>
   <y-m>-2.35</y-m>
   <z-m> 2.1</z-m>
  </center>
  <axis>
   <x>-1.0</x>
   <y> 0.0</y>
   <z> 0.0</z>
  </axis>
 </animation>

 <animation>
   <type>rotate</type>
   <object-name>Tail</object-name>
   <property>controls/gear/tail-rotate</property>
   <factor>90</factor>
   <center>
   <x-m> 0.0</x-m>
   <y-m> 1.27</y-m>
   <z-m> 0.0</z-m>
  </center>
  <axis>
   <x> 0.0</x>
   <y> 0.0</y>
   <z> 1.0</z>
  </axis>
 </animation>

</PropertyList>
